{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "types:check": {
      "dependsOn": ["^types:check"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:check": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "auth:generate": {
      "cache": false
    },
    "ui:add": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "checks": {
      "cache": false
    }
  }
}
